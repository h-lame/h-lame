  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= current_page.data[:title] %></title>
    <meta name="description" content="<%= page_meta_description %>">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag "talks/normalize" %>
    <%= stylesheet_link_tag "talks/main" %>
  </head>
  <body>
    <header class="wrapper">
      <h1 class="title"><%= page_title %></h1>
    </header>

    <aside id="menu" class="wrapper">
      <nav>
        <div class="revealer">
          <h1 class="reveal-name"><%= toc_name %></h1>
          <ol class="revealee">
            <% slides.each do |slide| %>
              <li><a href="#<%= slide.data[:id] %>"><%= slide.data[:title] %></a></li>
            <% end %>
          </ol>
        </div>
      </nav>
    </aside>

    <main class="wrapper">
      <article class="numberer">
        <section>
          <p><%= yield %></p>
        </section>

        <% slides.each do |slide| %>
          <%= partial 'talks/slide', locals: { slide: slide } %>
        <% end %>
      </article>
    </main>

    <%= partial 'ga' %>
  </body>
</html>
